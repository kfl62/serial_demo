-unless request.xhr?
  :javascript
    ibttn.auth.init()
-else
  %p.close{:onclick => "ib.auth.destroy()"}
  %p.task_title= t('ib_auth.login_title')
  %form#form_auth{:action => "/utils/login", :method => "post"}
    %table{:cellspacing => "0"}
      %thead
        %tr
          %th{:colspan => "2"}
      %tbody
        %tr
          %td
            %span= t('ib_auth.login_name')
          %td
            %input{:name => "[login_name]"}
        %tr
          %td
            %span= t('ib_auth.login_pass')
          %td
            %input#login_pass{:type => "password", :name => "[password]"}
      %tfoot
        %tr
          %td{:class => "buttons_bottom", :colspan => "2"}
            %span#login_button.button.login= "Login"

